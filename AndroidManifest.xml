<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cosmic.mods"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Holo" >
        <activity
            android:name="com.cosmic.mods.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cosmic.mods.IconPreferenceScreen"
            android:label="@string/title_activity_icon_preference_screen" >
        </activity>
        <activity
            android:name="com.cosmic.mods.UserInterface"
            android:label="@string/title_activity_user_interface" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cosmic.mods.Utility"
            android:label="@string/title_activity_utility"
            android:theme="@style/Holo.ListView" >
        </activity>
        <activity
            android:name="com.cosmic.mods.NotificationPanel"
            android:label="@string/title_activity_notification_panel"
            android:theme="@style/Holo.ListView" >
        </activity>
        <activity
            android:name="com.cosmic.mods.StatusBar"
            android:label="@string/title_activity_status_bar"
            android:theme="@style/Holo.ListView" >
        </activity>
        <activity
            android:name="com.cosmic.mods.StatusBarLayout"
            android:label="@string/layout"
            android:theme="@style/Holo.ListView" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cosmic.mods.Profile"
            android:label="@string/title_activity_profile"
            android:theme="@style/Holo.Profile" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cosmic.mods.QuickSettings"
            android:label="@string/title_activity_quick_settings"
            android:theme="@style/Holo.ListView" >
        </activity>
        <activity
            android:name="com.cosmic.mods.PlatLogoActivity"
            android:label="@string/title_activity_plat_logo"
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cosmic.mods.Mods"
            android:label="@string/title_activity_mods" >
        </activity>
        <activity
            android:name="com.cosmic.mods.Wallpaper"
            android:label="Cosmic Wallpapers" >
            <category android:name="android.intent.category.LAUNCHER" />

            <intent-filter>
                <action android:name="android.intent.action.SET_WALLPAPER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cosmic.mods.About"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.cosmic.mods.BeanBag"
            android:label="@string/title_activity_bean_bag"
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cosmic.mods.FAQ"
            android:label="@string/title_activity_faq" >
        </activity>
    </application>

</manifest>